<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane fx:id="loginBorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kripto.LoginController">
   <center>
      <VBox>
         <children>
            <HBox spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox>
                     <children>
                        <Label text="Username" />
                        <TextField fx:id="usernameTextField" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Password" />
                        <PasswordField fx:id="passwordTextField" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" spacing="20.0">
               <children>
                  <VBox>
                     <children>
                        <Label text="Certificate directory" />
                        <TextField fx:id="directoryTextField" />
                     </children>
                  </VBox>
                  <Button fx:id="browseButton" mnemonicParsing="false" onAction="#findCert" text="Browse">
                     <HBox.margin>
                        <Insets top="14.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
            <HBox spacing="20.0">
               <children>
                  <Button fx:id="logInButton" mnemonicParsing="false" onAction="#login" text="Log in" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelLogin" text="Cancel" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
