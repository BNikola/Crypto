<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainBorderPane" minHeight="600.0" minWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kripto.MainAppController">
   <center>
      <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab fx:id="encryptTab" text="Enryption">
               <content>
                  <BorderPane>
                     <center>
                        <VBox spacing="10.0" BorderPane.alignment="CENTER">
                           <children>
                              <HBox spacing="20.0">
                                 <children>
                                    <Label text="Path to file">
                                       <HBox.margin>
                                          <Insets top="5.0" />
                                       </HBox.margin>
                                    </Label>
                                    <TextField fx:id="filePathTextFieldEnc" prefHeight="25.0" prefWidth="204.0">
                                       <HBox.margin>
                                          <Insets left="39.0" />
                                       </HBox.margin>
                                    </TextField>
                                    <Button fx:id="fileButtonEnc" mnemonicParsing="false" onAction="#findFile" text="Browse" />
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </HBox>
                              <HBox layoutX="10.0" layoutY="10.0" spacing="20.0">
                                 <children>
                                    <Label text="Algorithm">
                                       <HBox.margin>
                                          <Insets top="5.0" />
                                       </HBox.margin>
                                    </Label>
                                    <ComboBox fx:id="algorithmComboBox" prefWidth="150.0">
                                       <HBox.margin>
                                          <Insets left="45.0" />
                                       </HBox.margin>
                                    </ComboBox>
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </HBox>
                              <HBox layoutX="10.0" layoutY="10.0" spacing="20.0">
                                 <children>
                                    <Label text="Path to output">
                                       <HBox.margin>
                                          <Insets top="5.0" />
                                       </HBox.margin>
                                    </Label>
                                    <TextField fx:id="outputPathTextFieldEnc" prefHeight="25.0" prefWidth="204.0">
                                       <HBox.margin>
                                          <Insets left="15.0" />
                                       </HBox.margin>
                                    </TextField>
                                    <Button fx:id="outputDirButtonEnc" mnemonicParsing="false" onAction="#findDirToOutput" text="Browse" />
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </HBox>
                              <HBox layoutX="10.0" layoutY="140.0" spacing="20.0">
                                 <children>
                                    <Label text="Path to user cert">
                                       <HBox.margin>
                                          <Insets top="5.0" />
                                       </HBox.margin>
                                    </Label>
                                    <TextField fx:id="userCertTextFieldEnc" prefHeight="25.0" prefWidth="204.0" />
                                    <Button fx:id="certificateButtonEnc" mnemonicParsing="false" onAction="#findCert" text="Browse" />
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </HBox>
                              <HBox layoutX="20.0" layoutY="185.0" spacing="20.0">
                                 <children>
                                    <Label text="Run encryption">
                                       <HBox.margin>
                                          <Insets top="5.0" />
                                       </HBox.margin>
                                    </Label>
                                    <Button fx:id="encryptButton" mnemonicParsing="false" text="Encrypt">
                                       <HBox.margin>
                                          <Insets left="9.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </HBox>
                              <Separator prefWidth="200.0" />
                              <Region VBox.vgrow="ALWAYS" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </center>
                     <bottom>
                        <VBox spacing="10.0" BorderPane.alignment="CENTER">
                           <children>
                              <Label text="Report">
                                 <VBox.margin>
                                    <Insets left="10.0" />
                                 </VBox.margin>
                              </Label>
                              <ListView />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </bottom>
                  </BorderPane>
               </content>
            </Tab>
          <Tab fx:id="decryptTab" text="Decryption">
               <content>
                  <BorderPane>
                     <center>
                        <VBox spacing="10.0" BorderPane.alignment="CENTER">
                           <children>
                              <HBox spacing="20.0">
                                 <children>
                                    <Label text="Path to file">
                                       <HBox.margin>
                                          <Insets top="5.0" />
                                       </HBox.margin>
                                    </Label>
                                    <TextField fx:id="filePathTextFieldDec" prefHeight="25.0" prefWidth="204.0">
                                       <HBox.margin>
                                          <Insets left="39.0" />
                                       </HBox.margin>
                                    </TextField>
                                    <Button fx:id="fileButtonDec" mnemonicParsing="false" onAction="#findFile" text="Browse" />
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </HBox>
                              <HBox spacing="20.0">
                                 <children>
                                    <Label text="Path to output">
                                       <HBox.margin>
                                          <Insets top="5.0" />
                                       </HBox.margin>
                                    </Label>
                                    <TextField fx:id="outputPathTextFieldDec" prefHeight="25.0" prefWidth="204.0">
                                       <HBox.margin>
                                          <Insets left="15.0" />
                                       </HBox.margin>
                                    </TextField>
                                    <Button fx:id="dirButton" mnemonicParsing="false" onAction="#findDirToOutput" text="Browse" />
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </HBox>
                              <HBox spacing="20.0">
                                 <children>
                                    <Label text="Run decryption">
                                       <HBox.margin>
                                          <Insets top="5.0" />
                                       </HBox.margin>
                                    </Label>
                                    <Button fx:id="decryptButton" mnemonicParsing="false" text="Decrypt">
                                       <HBox.margin>
                                          <Insets left="9.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </HBox>
                              <Region />
                              <Separator prefWidth="200.0" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </center>
                     <bottom>
                        <VBox spacing="10.0" BorderPane.alignment="CENTER">
                           <children>
                              <Label text="Report">
                                 <VBox.margin>
                                    <Insets left="10.0" />
                                 </VBox.margin>
                              </Label>
                              <ListView />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </bottom>
                  </BorderPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="userLabel" text="Welcome">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="logOutLabel" onMouseClicked="#logOut" onMouseEntered="#changeCursor" onMouseExited="#revertCursor" text="Log out">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </Label>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
